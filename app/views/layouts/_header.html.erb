	<header>
		<% if signed_in? %>
			<%= link_to logo, current_user %>
		<% else %>
			<%= link_to logo, root_path %>
		<% end %>
		<nav class= "round">
			<ul class="button-group">
				<li><%= link_to "Home", root_path, :class => 'button pill' %></li>
				<% if signed_in? %>
					<li><%= link_to "Profile", current_user, :class => 'button pill' %></li>
					<li><%= link_to "Blog", blog_index_path, :class => 'button pill' %>
					<li><%= link_to "Settings", edit_user_path(current_user), 
												:class => 'button pill' %>
					<li><%= link_to "Users", users_path, :class => 'button pill' %>
				<% end %>
				<li><%= link_to "Help", help_path, :class => 'button pill' %></li>
				<% if signed_in? %>
					<li><%= link_to "Sign out", signout_path, :method => :delete, 
															  :class => 'button pill primary' %></li>
				<% else %>
					<li><%= link_to "Sign in", signin_path, :class => 'button pill primary' %></li>
				<% end %>
			</ul>
		</nav>
      </header>