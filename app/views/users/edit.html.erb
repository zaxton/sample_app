<h1>Edit Account Info</h1>

<%= simple_form_for(@user) do |f| %>
<%= render 'shared/error_messages', :object => f.object %>

<div class= "field">
	<%= f.input :name %>
</div>
<div class= "field">
	<%= f.input :email %>
</div>
<div class= "field">
    <%= f.input :password %>
</div>
<div class= "field">
	<%= f.input :password_confirmation, :required => true, :label => "Confirmation" %>
</div>
<div class= "actions">
	<%= f.button :submit, "Update" %>
</div>
<% end %>

<div>
<%= gravatar_for @user %>
<a href="http://gravatar.com/emails">changes</a>
</div>