<tr>
	<td class="gravatar">
		<%= link_to gravatar_for(mfeed_item.user), mfeed_item.user %>
	</td>
	<td class="micropost">
		<span class="user">
			<%= link_to mfeed_item.user.name, mfeed_item.user %>
		</span>
		<span class="content">
			<%= mfeed_item.content %>
		</span>
		<span class="timestamp">
			Posted <%= time_ago_in_words(mfeed_item.created_at)%> ago.
		</span>
	</td>
</tr>